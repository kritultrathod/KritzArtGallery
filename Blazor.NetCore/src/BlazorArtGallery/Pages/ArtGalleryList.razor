@page "/"

@inherits ArtGalleryListBase

<h3>ArtGalleryList</h3>

@if (ArtDetails == null)
{
  <div class="spinner"></div>
}
else
{
  <div class="row justify-content-center">
    <img class="card-deck ">
    @foreach (var artDetail in ArtDetails)
    {
      <div class="card m-3" style="min-width: 35%; max-width: 40%;">
        <div class="card-header">
          <h3>@artDetail.ArtistName</h3>
        </div>

        <div class="card-body text-center">
          <a href="@artDetail.LargeImageUrl">
            <img class="card-img-top" src="@artDetail.SmallImageUrl" />
          </a>
        </div>

        <div class="card-footer text-sm-center">
          <a href="@($"artgallerydetails/{artDetail.ID}")" class="btn btn-success m-1">Details</a>
          <a href="#" class="btn btn-success m-1">Request Quote</a>
          <a href="#" class="btn btn-primary m-1">Send to Friend</a>
        </div>
      </div>
    }
  </div>
}
