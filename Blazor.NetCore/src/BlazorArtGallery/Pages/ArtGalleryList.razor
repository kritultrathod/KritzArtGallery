@page "/"

@inherits ArtGalleryListBase

<h3>ArtGalleryList</h3>

@if (ArtDetails == null)
{
  <div class="spinner"></div>
}
else
{
  <img class="card-deck">
  @foreach (var artDetail in ArtDetails)
  {
    <div class="card m-3" style="min-width: 30%; max-width: 80.5%;">
      <div class="card-header">
        <h3>@artDetail.ArtistName</h3>
      </div>

      <a href="@artDetail.LargeImageUrl">
        <img class="card-img-top" src="@artDetail.SmallImageUrl" />
      </a>
      <div class="card-footer text-center">
        <a href="#" class="btn btn-primary m-1">TEST</a>
      </div>
    </div>
  }
}
